<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{ path : 'event>/results/0/RC' , formatter : '.formatter.EventStatus'}"
		icon="{ path : 'event>/results/0/RC' , formatter : '.formatter.EventStatusIcon'}">
		<endButton>
			<Button text="{i18n>close}" press="closeEventDialog"/>
		</endButton>
		<content>
			<List class="sapContrast sapContrastPlus" items="{event>/results}">
				<items>
					<NotificationListItem description="{event>VAR1} {event>VAR2} {event>VAR3}" priority="" authorPicture="" showCloseButton="false"></NotificationListItem>
				</items>
			</List>
		</content>
	</Dialog>
</core:FragmentDefinition>