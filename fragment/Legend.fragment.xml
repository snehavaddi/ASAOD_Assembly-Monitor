<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f">
	<Dialog title="{i18n>legend}">
		<endButton>
			<Button text="{i18n>close}" press="closeLegendBox"/>
		</endButton>
		<content>
			<VBox alignItems="Center" class="vboxMarginTop">
				<f:Avatar src="{imageModel>/path}/images/Green.png" displaySize="M" displayShape="Square"></f:Avatar>
				<Text text="Phase Complete" class="sapUiSmallMarginTop"></Text>
			</VBox>
			<VBox alignItems="Center" class="vboxMarginTop">
				<f:Avatar src="{imageModel>/path}/images/Red.png" displaySize="M" displayShape="Square"></f:Avatar>
				<Text text="One or More Error" class="sapUiSmallMarginTop"></Text>
			</VBox>
			<VBox alignItems="Center" class="vboxMarginTop">
				<f:Avatar src="{imageModel>/path}/images/Yellow.png" displaySize="M" displayShape="Square"></f:Avatar>
				<Text text="Phase not yet complete, no errors" class="sapUiSmallMarginTop"></Text>
			</VBox>
			<VBox alignItems="Center" class="vboxMarginTop">
				<f:Avatar src="{imageModel>/path}/images/grey.png" displaySize="M" displayShape="Square"></f:Avatar>
				<Text text="Phase Yet to start" class="sapUiSmallMarginTop"></Text>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>